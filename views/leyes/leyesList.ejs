<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('../partials/head', {title: 'Listado'}) %>
	<body>
		<!-- header -->
		<%- include('../partials/headerNavbar') %>
		<!-- /header -->
		<div class="card">
			<div class="card-body">
				<div class="leyesList">
					<% leyes.forEach(element => { %>
						<ul>
							<li>Nombre: <%= element.type %> - <%= element.number %> - <%= element.year %></li>	
							<% if (Array.isArray(element.norm)) { %>
								<% element.norm.forEach(file => { %>
									<li><a href="../files/<%= file %>"><%= file %></a></li>
								<% }) %>
							<% } else { %>
								<li><a href="../files/<%= element.norm %>"><%= element.norm %></a></li>
								<% } %>
						</ul>
					<% }) %>
					
				</div>
			</div>
		</div>
		<!-- footer -->
		<%- include('../partials/footer') %>
		<!-- /footer -->
  </body>
</html>
